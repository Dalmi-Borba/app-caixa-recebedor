<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="icon" type="image/png" sizes="512x512" href="assets/img/iasdfavicon.png">
  <title>Caixa ASM</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap">
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
    }

    body {
      background-color: #f4f4f4;
    }

    .navbar {
      display: flex;
      justify-content: center;
      background-color: #ffffff;
      border-bottom: 2px solid #ddd;
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .navbar a {
      margin: 0 2rem;
      text-decoration: none;
      color: #333;
      font-weight: 500;
      transition: color 0.3s;
    }

    .navbar a:hover {
      color: #007BFF;
    }

    .container {
      max-width: 800px;
      margin: 3rem auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .card {
      background-color: white;
      padding: 1rem 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 600px;
      text-align: left;
      font-size: 1rem;
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: scale(1.01);
    }

    .item-line {
      display: flex;
      justify-content: space-between;
      padding: 4px 0;
      border-bottom: 1px solid #eee;
    }

    .actions {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
    }

    .actions a {
      font-size: 0.95rem;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .link-danger {
      color: #dc3545;
    }

    .link-primary {
      color: #007BFF;
    }

    .link-success {
      color: #28a745;
    }

    .link-danger:hover,
    .link-primary:hover,
    .link-success:hover {
      text-decoration: underline;
    }

    /* MODAL */
    .modal {
      display: none;
      position: fixed;
      z-index: 999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
      background-color: #fff;
      margin: 10% auto;
      padding: 20px;
      border-radius: 10px;
      width: 90%;
      max-width: 500px;
      position: relative;
      box-shadow: 0 0 20px rgba(0,0,0,0.3);
    }

    .close-btn {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 20px;
      font-weight: bold;
      color: #888;
      cursor: pointer;
    }

    .close-btn:hover {
      color: #000;
    }
  </style>
</head>
<body>

  <nav class="navbar">
    <a class="nav-link active" href="/">Home</a>
    <a class="nav-link" href="/view">Solicita√ß√µes</a>
    <a class="nav-link" href="/teste">Aprova√ß√µes</a>
    <a class="nav-link" href="/lotes">Criar Lote</a>
  </nav>

  <main class="container">
    <% items.forEach(function(image) { %>
      <div class="card">
        <div class="item-line"><strong>Favorecido:</strong> <span><%= image.nome %></span></div>
        <div class="item-line"><strong>Descri√ß√£o:</strong> <span><%= image.material %></span></div>
        <div class="item-line"><strong>Depto:</strong> <span><%= image.depto %></span></div>
        <div class="item-line"><strong>Valor:</strong> <span><%= image.valor %></span></div>
        <div class="item-line"><strong>Obs:</strong> <span><%= image.obs %></span></div>

        <div class="actions">
          <% if (image.tipo === "caixa") { %>
            <a href="/del/<%= image.id %>" class="link-danger">üóë Excluir</a>
          <% } else { %>
            <a href="#" onclick="openModal('<%= image.id %>')" class="link-primary">üìé Anexo</a>
            <a href="/delete/<%= image.id %>" class="link-danger">üóë Excluir</a>
            <a href="#" onclick="openModal('<%= image.id %>55')" class="link-success">‚úèÔ∏è Editar</a>
          <% } %>
        </div>
      </div>

      <!-- Modal -->
        <div id="<%=image.id%>" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <p>Nome: <%= image.nome %></p>
                </div>
                <div class="modal-body">
                    <object data="uploads/<%=image.img.name%>.pdf" type="application/pdf" width="550px" height="550px">
                        <embed src="uploads/<%=image.img.name%>.pdf" type="application/pdf">
                            <p>This browser does not support PDFs. Please download the PDF to view it: 
                            <a href="uploads/<%=image.img.name%>.pdf">Download PDF</a>.</p>
                        </embed>
                    </object>
                </div>
                <div class="modal-footer">
                    <a onclick="closeModal('<%=image.id%>')" class="link-danger">Fechar</a>
                </div>
            </div>
        </div>

        <div id="<%=image.id%>55" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <p>Editar Documento</p>
                </div>
                <div style="color: black;" class="modal-body row d-flex justify-content-center">
                    <form action="/doc" method="POST">
                        <label for="">Favorecido:</label>
                        <br>
                        <input value="<%=image.nome%>" type="text" id="nome" placeholder="Nome" name="nome" required>
                        <br>
                        <label for="">Descri√ß√£o:</label>
                        <br>
                        <input value="<%=image.material%>" type="text" id="material" placeholder="Descri√ß√£o" name="material" required>
                        <br>
                        <label for="">Valor:</label>
                        <br>
                        <input value="<%=image.valor%>" type="text" onInput="mascaraMoeda(event);" id="valor" placeholder="Valor" name="valor" required>
                        <br>
                        <label for="obs">Observa√ß√µes:</label>
                        <br>
                        <textarea value="<%=image.obs%>" id="obs" name="obs"></textarea>
                        <br>
                        <button class="btn btn-primary shadow d-block w-100" type="submit">Enviar</button>
                        <input type="hidden" name="id" value="<%=image.id%>">
                    </form>
                </div>
                <div class="modal-footer">
                    <a onclick="closeModal('<%=image.id%>55')" class="link-danger">Fechar</a>
                </div>
            </div>
        </div>

    <% }) %>
  </main>

  <script>
    function openModal(id) {
      const modal = document.getElementById(id);
      if (modal) {
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';
      }
    }

    function closeModal(id) {
      const modal = document.getElementById(id);
      if (modal) {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }
    }

    // Fecha modal ao clicar fora do conte√∫do
    window.onclick = function(event) {
      const modals = document.querySelectorAll('.modal');
      modals.forEach(modal => {
        if (event.target === modal) {
          modal.style.display = "none";
          document.body.style.overflow = 'auto';
        }
      });
    }
  </script>

</body>
</html>
