<section class="config-card">
    <h2>Criar Departamento</h2>
    <form action="/config-depto" method="post">
      <input type="text" id="nun_depto" name="nun_depto" placeholder="Número da Conta" required>
      <input type="text" id="nome_depto" name="nome_depto" placeholder="Nome da Conta" required>
      <button type="submit">Salvar</button>
    </form>
  </section>

  <section>
    <table>
      <thead>
        <tr>
          <th>Depto</th>
          <th>Nome</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <% depto.forEach(item => { %>
          <tr>
            <td>
              <input type="text" name="nun_depto" id="nun_depto-<%= item.id %>" value="<%= item.nun_depto %>">
            </td>
            <td>
              <input type="text" name="nome_depto" id="nome_depto-<%= item.id %>" value="<%= item.nome_depto %>">
            </td>
            <td>
              <button class="edit-btn" onclick="editar_depto('<%= item.id %>')">Editar</button>
              <button class="remove-btn" onclick="remover_depto('<%= item.id %>')">Remover</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </section>

<script>
  function editar_depto(id) {
    fetch(`/config-depto/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        nun_depto: document.getElementById(`nun_depto-${id}`).value,
        nome_depto: document.getElementById(`nome_depto-${id}`).value,
        id: id,
      }),
    })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Departamento atualizado com sucesso.');
          location.reload();
        } else {
          alert('Ocorreu um erro ao atualizar o departamento.');
        }
      });
  }

  function remover_depto(id) {
    if (confirm('Tem certeza que deseja remover este departamento?')) {
      fetch(`/config-depto/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
      })
        .then(response => response.json())
        .then(response => {
          if (response.success) {
            location.reload();
          } else {
            alert('Ocorreu um erro ao remover o departamento.');
          }
        });
    }
  }
</script>